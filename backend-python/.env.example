# Python Backend Environment Configuration
# Migrated from Node.js backend

PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=compliant-dev-secret-change-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Admin Configuration
# Admin password hash - REQUIRED in production
# Generate using Python: python -c "import bcrypt; print(bcrypt.hashpw(b'YourSecurePassword', bcrypt.gensalt()).decode())"
# This should be a bcrypt hash of your admin password
ADMIN_PASSWORD_HASH=
DEFAULT_ADMIN_EMAILS=admin@compliant.team

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5175

# Database (PostgreSQL - optional, defaults to in-memory)
DATABASE_URL=

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@compliant.team

# Adobe PDF Service (optional)
ADOBE_API_KEY=
ADOBE_CLIENT_ID=

# AI Analysis Service (optional)
AI_PROVIDER=openai
AI_API_KEY=
OPENAI_API_KEY=
AI_MODEL=gpt-4-turbo-preview

# Insurance Configuration
RENEWAL_LOOKAHEAD_DAYS=60
BINDER_WINDOW_DAYS=60

# CORS Origins (comma-separated, optional)
CORS_ORIGINS=
